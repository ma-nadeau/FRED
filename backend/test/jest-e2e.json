{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@fred/repositories/(.*)": "<rootDir>/../libs/repositories/src/$1",
    "@fred/repositories": "<rootDir>/../libs/repositories/src",
    "@fred/transfer-objects/(.*)": "<rootDir>/../libs/transfer-objects/src/$1",
    "@fred/transfer-objects": "<rootDir>/../libs/transfer-objects/src"
  }
}